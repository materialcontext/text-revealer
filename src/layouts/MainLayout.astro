---
interface Props {
  title: string;
  description?: string;
  hideNav?: boolean;
  hideFooter?: boolean;
}

const {
  title,
  description = "Text reveal application for teaching",
  hideNav = false,
  hideFooter = false
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <!-- Replace CSS with SCSS -->
    <style is:global>
      @import "../styles/main.scss";
    </style>
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
  </head>
  <body>
    {!hideNav && (
      <nav class="main-nav">
        <div class="nav-container">
          <a href="/" class="nav-logo">Text Reveal</a>
          <div class="nav-links">
            <a href="/">Home</a>
            <a href="/browse">Browse Files</a>
            <a href="/reader">Reader</a>
          </div>
        </div>
      </nav>
    )}

    <main>
      <slot />
    </main>

    {!hideFooter && (
      <footer class="subtle-footer">
        <div class="footer-content">
          <p>Text Reveal Application &copy; 2025</p>
        </div>
      </footer>
    )}
  </body>
</html>
